#!/bin/sh

[ ! "$OPENSIM" ] && OPENSIM=core/opensim
[ ! "$PGM" ] && PGM=$(basename "$0")
[ ! "$TMP" ] && TMP=/tmp/$PGM.$$

BIN=$(dirname  $(readlink -f "$0"))
OSDDIR=$(dirname "$BIN")
[ ! "$LIB" ] && LIB=$OSDDIR/lib

. $CONTRIB/bash-helpers/helpers || echo "$PGM: Missing helpers library, run install.sh"

for etc in $OSDDIR/etc /etc/$OPENSIM ~/etc/$OPENSIM
do
    [ -d "$etc" ] && ETC=$etc
    [ -f "$etc/opensim.conf" ] && . $ETC/opensim.conf 2>/dev/null
done

[ ! "$LIB" ] && LIB=$OSDDIR/lib
[ ! "$OSBIN" ] && OSBIN="$OPENSIM/bin"
[ ! "$VAR" ] && VAR=$OSDDIR/var
[ ! "$LOGS" ] && LOGS=$VAR/logs
[ ! "$CACHE" ] && CACHE=$VAR/cache
[ ! "$SRC" ] && SRC=$OSDDIR/src
[ ! "$CONTRIB" ] && CONTRIB=$OSDDIR/contrib

( ls $OSBIN/OpenSim.exe  \
  || ls */bin/OpenSim.exe \
  || ls lib/*/bin/OpenSim.exe
) >$TMP.osexe 2>/dev/null \
&& OSBIN=$(head -1 $TMP.osexe | xargs dirname) \
&& echo "OSBIN now $OSBIN" \
|| echo "$PGM: Missing $OSBIN/OpenSim.exe, run install.sh"

osConsole() {
  [ ! "$2" ] && return
  osInstance=$1
  shift
  osCommand="$@"
  lr=$(printf "\n\b")
  pre=$(printf "\n\b")
  screen -S $osInstance -X stuff "$(echo "$pre$osCommand$lr")"
}
